<% provide :title, t(".all_my_courses") %>
<h1><%= t ".all_my_courses" %>
</h1>
<div id="main">
  <div><%= t ".you_have" %> <%= pluralize @user_courses.size, t(".courses") %>
  </div>
  <%= will_paginate @user_courses %>
  <table class="table table-striped">
    <tbody><% @user_courses.each do |course| %>
      <tr>
        <td><%= link_to course.name, trainer_course_path(course) %> |
        <%= link_to t(".add_member"), edit_trainer_course_path(course, :send => t(".add_member")) %> |
        <%= link_to t(".edit_course"), edit_trainer_course_path(course) %>
        </td>
      </tr><% end %>
    </tbody>
  </table>
  <%= will_paginate @user_courses%>
</div>

