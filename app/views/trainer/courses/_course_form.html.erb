<%= f.label :name, t(".name") %>
<%= f.text_field :name, class: "form-control" %>

<%= f.label :description, t(".description") %>
<%= f.text_field :description, class: "form-control" %>

<%= f.label :start_date, t(".start") %>
<%= f.date_field :start_date, class: "form-control" %>

<%= f.label :end_date, t(".end") %>
<%= f.date_field :end_date, class: "form-control" %>
<% if params[:send] %>
  <%= f.fields_for :user_courses, @course.user_courses do |ff| %>
    <% if ff.object.user_id.blank? %>
        <div class="room_category_fields">
          <div class="field">
            <%= ff.label :name %><br>
            <%= ff.number_field :user_id %>
            <%= ff.submit t(".add_mem"), class: "btn btn-primary" %>
          </div>
        </div>
    <% end %>
  <% end %>
<% else %>
  <%= f.submit yield(:button_text), class: "btn btn-primary" %>
<% end %>

<%= f.label :end_date, t(".end") %>
<%= f.date_field :end_date, class: "form-control" %>
<%= f.submit t(".new"), class: "btn btn-primary" %>
